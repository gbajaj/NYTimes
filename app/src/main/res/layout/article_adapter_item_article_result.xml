<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/article_adaptor_article_card_view"
    android:layout_width="wrap_content"
    android:minWidth="200dp"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_article_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_article_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_article_image"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:maxWidth="200sp"
            android:textColor="#aa000000"
            android:textSize="14sp"
            tools:text="i am the news head line on varius topics" />

        <TextView
            android:id="@+id/item_article_news_desk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_article_headline"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:textSize="10sp"
            tools:text="sports" />

        <TextView
            android:id="@+id/item_article_snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_article_news_desk"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:maxWidth="200sp"
            android:textColor="#80000000"
            android:textSize="12sp"
            tools:text="A Maine, girl has gone to sleepovers and trick-or-treating with her pet duck. Now they're going on a national TV program together...." />

    </RelativeLayout>
</android.support.v7.widget.CardView>